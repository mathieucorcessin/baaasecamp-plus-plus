{
  "name": "Baaasecamp++",
  "description": "Add more features to Basecamp and save time.",
  "homepage_url": "https://yeswedev.bzh",
  "version": "1.0.2",
  "author": "Mathieu Corcessin",
  "manifest_version": 3,
  "content_scripts": [
    {
      "run_at" : "document_idle",
      "js": ["basecamp.js"],
      "matches": [
        "https://*.basecamp.com/*",
        "http://*.basecamp.com/*",
        "https://*.basecampapi.com/*",
        "http://*.basecampapi.com/*",
        "https://*.37signals.com/*",
        "http://*.37signals.com/*"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "https://3.basecampapi.com/*",
    "http://3.basecampapi.com/*",
    "https://*.37signals.com/*",
    "http://*.37signals.com/*"
  ]
}
